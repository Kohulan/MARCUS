# MARCUS Backend Environment Configuration
# Copy this file to .env in the backend directory and update values as needed

# Required: OpenAI API Key for chemical analysis features
OPENAI_API_KEY=your_openai_api_key_here

# Required: Secret key for session encryption and security
# Generate a secure key using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=development_secret_key_change_in_production

# Optional: OpenAI Model Configuration
OPENAI_MODEL_ID=gpt-4

# Optional: CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Optional: Rate Limiting Configuration
RATE_LIMIT_ENABLED=true

# Optional: Session Timeout (in hours)
SESSION_TIMEOUT_HOURS=24

# Optional: Environment (development/production)
NODE_ENV=development

# Optional: Security Log Level
SECURITY_LOG_LEVEL=INFO
